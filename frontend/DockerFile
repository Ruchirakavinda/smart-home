# Stage 1: Build the React Application
# Use a Node.js image suitable for building React
FROM node:20-alpine AS builder

# Set the working directory
WORKDIR /app

# Copy package files and install dependencies
COPY package*.json ./
RUN npm install

# Copy all source code
COPY . .
# Build the React application (creates the 'build' folder)
RUN npm run build

# --- Stage 2: Serve with Nginx ---
# Use the official lightweight Nginx image
FROM nginx:alpine

# Copy the static built files from the builder stage into the Nginx public directory
COPY --from=builder /app/dist /usr/share/nginx/html

# Expose the default Nginx HTTP port
EXPOSE 80

# The default Nginx CMD runs the web server
CMD ["nginx", "-g", "daemon off;"]